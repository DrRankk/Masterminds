        <h2>Existing Job Listings</h2>
        <div id="adminJobsContainer"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            fetch('/get-jobs')
                .then(response => response.json())
                .then(data => {
                    const adminJobsContainer = document.getElementById('adminJobsContainer');
                    data.forEach(job => {
                        const jobDiv = document.createElement('div');
                        jobDiv.classList.add('job-listing');
                        jobDiv.innerHTML = `
                            <h3>${job.title}</h3>
                            <img src="${job.image}" alt="${job.title}" style="width:100px;height:auto;">
                            <p>${job.description}</p>
                            <p>Location: ${job.location}</p>
                            <p>Salary: $${job.salary}</p>
                            ${job.pdf ? `<a href="${job.pdf}" target="_blank">View PDF</a>` : ''}
                            <button onclick="deleteJob('${job._id}')">Delete</button>
                        `;
                        adminJobsContainer.appendChild(jobDiv);
                    });
                });
        });

        function deleteJob(id) {
            fetch(`/delete-job/${id}`, { method: 'DELETE' })
                .then(response => response.text())
                .then(data => {
                    alert(data);
                    location.reload();
                });
        }
    </script>
