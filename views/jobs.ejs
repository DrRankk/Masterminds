        <script>
         document.addEventListener('DOMContentLoaded', () => {
            fetch('/get-jobs')
                .then(response => response.json())
                .then(data => {
                    const jobsContainer = document.getElementById('jobsContainer');
                    data.forEach(job => {
                        const jobDiv = document.createElement('div');
                        jobDiv.classList.add('col-lg-4', 'col-md-6', 'portfolio-item', 'isotope-item', 'filter-app');
                        jobDiv.innerHTML = `
                            <img src="${job.image}" class="img-fluid" alt="${job.title}">
                            <div class="portfolio-info">
                                <h4>${job.title}</h4>
                                <p>${job.description}</p>
                                <p>Location: ${job.location}</p>
                                <p>Salary: $${job.salary}</p>
                                <a href="${job.image}" title="${job.description}" data-gallery="portfolio-gallery-app" class="glightbox preview-link">
                                    <i class="bi bi-zoom-in"></i>
                                </a>
                                ${job.pdf ? `<a href="${job.pdf}" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>` : ''}
                            </div>
                        `;
                        jobsContainer.appendChild(jobDiv);
                    });
                });
        });
        </script>
